<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/navigation_back_btn"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:background="#F3F3F3"
            android:text="Back"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#3399FF"
            android:onClick="goBack"/>

        <TextView
            android:id="@+id/activity_title_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginRight="65dp"
            android:layout_toRightOf="@+id/navigation_back_btn"
            android:text="Test"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/nav_step3"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Take Photos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Survey Questions"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Survey Score"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rating_question"
        android:textColor="#330066"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rating_box"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum="7">

        <RadioButton
            android:id="@+id/rating_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.0"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_onefive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.5"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.0"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_twofive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.5"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3.0"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_threefive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3.5"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rating_four"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4.0"
            android:textColor="#330066"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <Button
        android:id="@+id/view_examples_btn"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#3ab54a"
        android:text="View Examples"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/next_bt"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#3ab54a"
        android:text="Next >"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/splash"
            />
    </RelativeLayout>

</LinearLayout>
