<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3" >

    <TextView
        android:id="@+id/question_box"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/yes_bt"
        android:gravity="center"/>
    
    <ImageView
        android:id="@+id/yes_bt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/yes_bt_disabled_filled"
        android:scaleType="centerInside"/>
    
    <LinearLayout 
        android:id="@+id/divider_line"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/question_box"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dividing_lines"/>
    

</RelativeLayout>
